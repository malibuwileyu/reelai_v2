rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow all operations during testing when using emulator
    match /{allPaths=**} {
      allow read, write: if request.resource == null || 
        request.resource.size < 10 * 1024 * 1024 && // 10MB max file size
        (request.auth != null || true); // Allow both authenticated and unauthenticated access in test
    }
  }
} 