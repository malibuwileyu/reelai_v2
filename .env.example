# Firebase Configuration
# Get these values from your Firebase Console -> Project Settings -> General
EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# Environment
# Options: development, test, production
NODE_ENV=development

# API Configuration
# Base URL for API endpoints
API_URL=http://localhost:3000
# API timeout in milliseconds
API_TIMEOUT=30000

# Feature Flags
# Enable/disable video processing features
ENABLE_VIDEO_PROCESSING=true
# Enable/disable analytics tracking
ENABLE_ANALYTICS=true

# Testing Configuration
# Test user credentials for automated testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test_password

# Firebase Emulator Configuration
# Only needed for local development
FIREBASE_AUTH_EMULATOR_PORT=9099
FIREBASE_FIRESTORE_EMULATOR_PORT=8080
FIREBASE_STORAGE_EMULATOR_PORT=9199 